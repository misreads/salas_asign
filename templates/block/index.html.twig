{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block title %}Block index{% endblock %}

{% block content %}
    <div class="panel">
        <div class="panel-body">
            <h1>Block index</h1>

            <table class="table table-hover">
                <thead>
                    <tr class="info">
                        <th>Id</th>
                        <th>Block_time</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for block in blocks %}
                        <tr>
                            <td>{{ block.id }}</td>
                            <td>{{ block.blockTime }}</td>
                            <td>
                                <a href="{{ path('block_show', {'id': block.id}) }}">show</a>
                                <a href="{{ path('block_edit', {'id': block.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


    <a href="{{ path('block_new') }}">Create new</a>
{% endblock %}